<%= form_with(model: @micropost, local: true) do |f| %> <%# создание отдельной формы для микропостов  %>
  <%= render 'shared/error_messages', object: f.object %> <%#переменная object: принимает значение модели(в данном случае @micropost )  %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="image"> <%#добавление формы для имаджа %>
    <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png" %> <%# данный параметр позволяет нам выбирать на комьютере только файлы с заданными расширениями %>
  </span>
  <script type="text/javascript"> <%#часть кода на JQuery для проверки размера и формата на стороне браузера(клиента)  %>
      $("#micropost_image").bind("change", function() {
          var size_in_megabytes = this.files[0].size/1024/1024;
          if (size_in_megabytes > 5) {
              alert("Maximum file size is 5MB. Please choose a smaller file.");
              $("#micropost_image").val("");
          }
      });
  </script>
<% end %>